<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Apply for Bus Pass</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212;
      color: #e0e0e0;
      font-family: 'Segoe UI', sans-serif;
    }

    .navbar {
      background-color: #1f1f1f;
    }

    .navbar .navbar-brand,
    .navbar .btn {
      color: #ffffff;
    }

    .card {
      background-color: #1e1e1e;
      border-radius: 12px;
      box-shadow: 0 2px 10px rgba(255, 255, 255, 0.05);
      color: #e0e0e0;
    }

    .form-label {
      color: #cccccc;
    }

    .form-control,
    .form-select {
      background-color: #2a2a2a;
      color: #fff;
      border: 1px solid #444;
    }

    .form-control::placeholder {
      color: #aaa;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: #0f4c5c;
      box-shadow: none;
    }

    .btn-primary {
      background-color: #0f4c5c;
      border-color: #0f4c5c;
    }

    .btn-primary:hover {
      background-color: #0d3b49;
    }

    .modal-content {
      background-color: #1e1e1e;
      color: #e0e0e0;
      border-radius: 12px;
    }

    .modal-header,
    .modal-footer {
      border-color: #333;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-dark px-4">
    <a class="navbar-brand fw-bold" href="/dashboard">QPass</a>
    <div class="ms-auto">
      <a href="/logout" class="btn btn-outline-light">Logout</a>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="card mx-auto p-4" style="max-width: 600px;">
      <h3 class="mb-4 text-center">Apply for Bus Pass</h3>

      <form id="passForm" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-label">Full Name (as per ID)</label>
          <input type="text" class="form-control" id="name" name="fullName" placeholder="e.g., Ayan Khan" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="e.g., ayan@email.com" required>
        </div>
        <div class="mb-3">
          <label for="from" class="form-label">From</label>
          <input type="text" class="form-control" id="from" name="from" placeholder="e.g., Mumbai" required>
        </div>
        <div class="mb-3">
          <label for="to" class="form-label">To</label>
          <input type="text" class="form-control" id="to" name="to" placeholder="e.g., Pune" required>
        </div>
        <div class="mb-3">
          <label for="duration" class="form-label">Duration</label>
          <select class="form-select" id="duration" name="duration" required>
            <option value="">Select duration</option>
            <option value="7 Days">7 Days</option>
            <option value="15 Days">15 Days</option>
            <option value="30 Days">30 Days</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="docType" class="form-label">Document Type</label>
          <select class="form-select" id="docType" name="docType" required>
            <option value="">Select document type</option>
            <option value="aadhar">Aadhar Card</option>
            <option value="pan">PAN Card</option>
            <option value="college id">College ID</option>
            <option value="voter">Voter ID</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="docNumber" class="form-label">Document Number</label>
          <input type="text" class="form-control" id="docNumber" name="docNumber" placeholder="Enter ID number"
            required>
        </div>
        <div class="mb-4">
          <label for="idProof" class="form-label">Upload ID Proof</label>
          <input class="form-control" type="file" id="idProof" name="idProof" accept=".jpg,.jpeg,.png,.pdf" required>
        </div>
        <input type="hidden" id="amount" name="amount" value="100" />
        <div class="d-grid">
          <button type="button" id="proceedBtn" class="btn btn-primary">Proceed to Pay ðŸ’³</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Payment Confirmation Modal -->
  <div class="modal fade" id="confirmModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Payment</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Confirm your details and proceed to pay <strong>â‚¹100</strong> for your bus pass.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" id="confirmPay" class="btn btn-primary">Confirm & Pay</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>
    const proceedBtn = document.getElementById('proceedBtn');
    const confirmPay = document.getElementById('confirmPay');
    const passForm = document.getElementById('passForm');
    const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));

    proceedBtn.addEventListener('click', () => {
      if (passForm.checkValidity()) {
        confirmModal.show();
      } else {
        passForm.reportValidity();
      }
    });

    confirmPay.addEventListener('click', async () => {
      confirmModal.hide();

      const amountField = parseInt(document.getElementById('amount').value) * 100;

      // Create Razorpay order
      const res = await fetch('/create-order', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ amount: amountField }),
        credentials: 'include' // <-- IMPORTANT: Send cookies
      });
      const data = await res.json();

      const options = {
        key: 'rzp_test_1DP5mmOlF5G5ag',
        amount: data.amount,
        currency: data.currency,
        name: "Bus Pass System",
        description: "Bus Pass Payment",
        order_id: data.id,
        handler: async function (response) {
          // STEP 1: Send form data with credentials
          const formDataToSend = new FormData(passForm);
          await fetch('/apply-pass', { 
            method: 'POST', 
            body: formDataToSend,
            credentials: 'include' // <-- IMPORTANT
          });

          // STEP 2: Save payment details
          const receiptRes = await fetch('/payment-success', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              order_id: response.razorpay_order_id,
              payment_id: response.razorpay_payment_id,
              amount: data.amount,
              currency: data.currency,
              fullName: document.getElementById('name').value,
              from: document.getElementById('from').value,
              to: document.getElementById('to').value,
              duration: document.getElementById('duration').value
            }),
            credentials: 'include' // <-- IMPORTANT
          });

          const result = await receiptRes.json();
          if (result.success) {
            window.location.href = result.receiptUrl;
          } else {
            alert("Payment successful but receipt generation failed.");
          }
        },
        theme: { color: "#0f4c5c" }
      };

      const rzp1 = new Razorpay(options);
      rzp1.open();
    });
  </script>
</body>

</html>
